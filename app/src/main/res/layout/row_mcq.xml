<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:elevation="@dimen/margin_5"
         android:layout_height="wrap_content"
         app:cardCornerRadius="@dimen/margin_5">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_shadow"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/txt_date"
                android:text="Heading1"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/fontsize_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_5"
                android:text="25 Oct, 2019 11:27 PM"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/fontsize_small"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/btn_start"
                android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/fontsize_normal"
              />

            <Button
                android:id="@+id/btn_start"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_gradient_pink"
                android:paddingLeft="@dimen/margin_30"
                android:paddingRight="@dimen/margin_30"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontsize_normal"
                />


        </RelativeLayout>


    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>
