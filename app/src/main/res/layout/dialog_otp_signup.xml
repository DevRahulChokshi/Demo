<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorred" />

    <TextView
        android:id="@+id/txt_otp_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:text="One Time Password (OTP) has been send on your mobile ******4356, please enter the same here for sign up."
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/fontsize_medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/edt_otp_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@drawable/bg_rounded_gray_bordertransperent"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/fontsize_medium" />

        <TextView
            android:id="@+id/edt_otp_two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@drawable/bg_rounded_gray_bordertransperent"
            android:gravity="center"

            android:inputType="number"
            android:maxLength="1"

            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/fontsize_medium" />

        <TextView
            android:id="@+id/edt_otp_three"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@drawable/bg_rounded_gray_bordertransperent"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/fontsize_medium" />

        <TextView
            android:id="@+id/edt_otp_four"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_3"
            android:background="@drawable/bg_rounded_gray_bordertransperent"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/fontsize_medium" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_resend_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center"
        android:text="@string/resend_otp_number"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/fontsize_medium" />


    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@drawable/bg_rounded_green"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/fontsize_large"
        android:textStyle="bold" />

</LinearLayout>
