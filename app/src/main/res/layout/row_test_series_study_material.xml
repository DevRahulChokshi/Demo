<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_5"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_10"
    android:background="@drawable/bg_gray_border_shadow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/txt_date"
                android:text="Heading1"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/fontsize_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_5"
                android:text="10 - Questions"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/fontsize_small"
                />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@color/colorGray"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/btn_start"
                android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/fontsize_normal"
                />

            <Button
                android:id="@+id/btn_start"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_rounded_pink_border_transperent"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/fontsize_normal"
                />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
